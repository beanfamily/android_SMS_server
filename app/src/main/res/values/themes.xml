<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidSMSServer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/material_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->



    </style>

    <style name="Theme.AndroidSMSServer.NoActionBar" parent = "Theme.AndroidSMSServer">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="startButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="icon">@drawable/icon_sms</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">60dp</item>
        <item name="elevation">20dp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconSize">35dp</item>
        <item name="iconGravity">textTop</item>

    </style>



</resources>